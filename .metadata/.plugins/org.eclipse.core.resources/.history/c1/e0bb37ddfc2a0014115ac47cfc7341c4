var makeViews = function(num) {
	for (var i = 0; i < num; i++) {
		var newView = Ti.UI.createView({
			top : spacing,
			left : spacing,
			backgroundColor : "#fff",
			width : size,
			height : size,
			borderRadius : 20,
			id : i
		});

		var newImage = Ti.UI.createImageView({
			width : size + 30,
			image : "/images/" + galleryList[i],
			borderRadius : 0,
			
		});
		imageArray.push(newView);
		newView.add(newImage);
		viewContainer.add(newView);
		newView.addEventListener("click", makeScroll);

	}
};
var makeScroll = function(evt) {
	for (var i = 0; i < numberOfViews; i++) {
		var newViewable = Ti.UI.createView({
			
			backgroundColor : "#fff",
			width : platWidth,
			height : platWidth,
			borderRadius : 20,
			id : i
		});

		var newImageable = Ti.UI.createImageView({
			width : platWidth + 30,
			image : "/images/" + galleryList[i],
			borderRadius : 0

		});
		newViewable.add(newImageable);
		scrollView.addView(newViewable);
	}
	scrollWindow.add(scrollView);
	scrollView.setCurrentPage(this.id);
	navWin.openWindow(scrollWindow);
	
};
scrollView.addEventListener("scrollend", function(){
	
});

Ti.Gesture.addEventListener("orientationchange", function(){
	platWidth = Ti.Platform.displayCaps.platformWidth;
	for (var i=0, j=imageArray.length; i<j; i++){
		imageArray[i].width = (platformWidth/viewsPerRow) - spacing/numberOfViews;
	}
});

makeViews(numberOfViews);
win.add(viewContainer);
console.log(navWin.window);
navWin.open();

